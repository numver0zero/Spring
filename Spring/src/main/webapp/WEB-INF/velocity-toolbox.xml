<?xml version="1.0"?>
<toolbox>
	<tool>
	    <key>StringUtil</key>
	    <scope>request</scope>
	    <class>com.spring.util.StringUtil</class>
	</tool>
	<tool>
	    <key>ComUtils</key>
	    <scope>request</scope>
	    <class>com.spring.util.ComUtils</class>
	</tool>
	<tool>
	    <key>DateUtil</key>
	    <scope>request</scope>
	    <class>com.spring.util.DateUtil</class>
	</tool>
	<tool>
		<key>ComStringUtil</key>
		<scope>request</scope>
     	<class>com.spring.util.StringUtil</class>
  	</tool>
	<tool>
		<key>vcMath</key>
		<scope>application</scope>
     	<class>org.apache.velocity.tools.generic.MathTool</class>
  	</tool>
	<tool>
		<key>link</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.struts.StrutsLinkTool</class>
	</tool>

 	<tool>
	    <key>number</key>
	    <scope>application</scope>
	    <class>org.apache.velocity.tools.generic.NumberTool</class>
	    <parameter name="format" value="#0.0" />
	</tool>
	<tool>
	    <key>date</key>
	    <scope>application</scope>
	    <class>org.apache.velocity.tools.generic.DateTool</class>
	    <parameter name="format" value="yyyy-MM-dd" />
	</tool>
	<tool>
	    <key>esc</key>
	    <scope>application</scope>
	    <class>com.spring.util.EscapeTool</class>
	</tool>
	<tool>
	    <key>string</key>
	    <scope>application</scope>
	    <class>com.spring.util.StringTool</class>
	</tool>
    <tool>
		<key>listTool</key>
		<scope>application</scope>
     	<class>org.apache.velocity.tools.generic.ListTool</class>
  	</tool>
	<tool>
	  	<key>cookie</key>
	  	<scope>request</scope>
	  	<class>org.apache.velocity.tools.view.tools.CookieTool</class>
	</tool>
  	<tool>
  		<key>params</key>
  		<scope>request</scope>
  		<class>org.apache.velocity.tools.view.tools.ParameterParser</class>
  	</tool>
</toolbox>